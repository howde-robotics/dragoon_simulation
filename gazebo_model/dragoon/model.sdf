			<pose> 0 0 0 0 0 0</pose>
			<child> wheel_3_LB </child>
			<parent> chassis </parent>
			<axis>
				<xyz> 0 1 0 </xyz>
				<dynamics>
					<damping>0.1</damping>
					<friction>0.99</friction>
				</dynamics>				
			</axis>
		</joint>

		<link name="wheel_4_RB">
			<pose> -0.1397 -0.12764 0.02604 0 0 0</pose>
			<inertial>
				<mass> 0.129 </mass>
				<inertia>
					<ixx>0.001 </ixx>
					<iyy>0.001 </iyy>
					<izz>0.001 </izz>
					<ixy>0    </ixy>
					<ixz>0    </ixz>
					<iyz>0    </iyz>
				</inertia>			
			</inertial>

			<collision name="wheel_4_RB_collision">
				<pose> 0 0 0 1.57079 0 0 </pose>

				<geometry>
					<cylinder>
						<radius> 0.06 </radius>
						<length> 0.02 </length>
					</cylinder>
				</geometry>

				<surface>
					<friction>
					<ode>
						<mu>0.15</mu>
