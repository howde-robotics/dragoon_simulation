<?xml version='1.0'?>
<sdf version='1.4'>
	<model name="dragoon">

	<!-- Main chassis of dragoon -->
		<link name='chassis'>
			<pose>0 0 0 0 0 0</pose>
			
			<inertial>
				<mass>3.59"</mass>
				<inertia>
					<ixx>0.05 </ixx>
					<iyy>0.04 </iyy>
					<izz>0.08 </izz>
					<ixy>0    </ixy>
					<ixz>0    </ixz>
					<iyz>0    </iyz>
				</inertia>
			</inertial>

			<!-- collision is a block -->
			<collision name='collision'>
				<pose> 0 0 0 0 0 0</pose>
				<geometry>
					<mesh>	
						<uri> model://dragoon/meshes/collision_base.STL</uri>
					</mesh>
				</geometry>
			</collision>

			<visual name='visual'>
				<geometry>
					<mesh>	
						<uri> model://dragoon/meshes/dragoon_base.STL</uri>
					</mesh>
				</geometry>
			</visual>

		</link>

		<link name="lidar">
			<pose> 0 0 0.2 0 0 0</pose>
			
			<sensor type="ray" name="VLP-16">
				<pose> 0 0 0 0 0 0 </pose>
				<visualize> false</visualize>
				<update_rate>30</update_rate>
				<ray>

					<!-- The scan element contains the horizontal and vertical beams.
					We are leaving out the vertical beams for this tutorial. -->
					<scan>

						<!-- The horizontal beams -->
						<horizontal>
						<!-- The velodyne has 16 beams(samples) -->
							<samples>500</samples>

							<!-- Resolution is multiplied by samples to determine number of
								simulated beams vs interpolated beams. See:
								http://sdformat.org/spec?ver=1.6&elem=sensor#horizontal_resolution
								-->
							<resolution>1</resolution>

							<!-- Minimum angle in radians -->
							<min_angle>-3.14159</min_angle>

							<!-- Maximum angle in radians -->
							<max_angle>3.14159</max_angle>
						</horizontal>

						<vertical>
							<samples>16</samples>
							<resolution>1</resolution>
							<min_angle>-0.26</min_angle>
							<max_angle> 0.26</max_angle>
						</vertical>
					</scan>

					<!-- Range defines characteristics of an individual beam -->
					<range>

						<!-- Minimum distance of the beam -->
						<min>0.12</min>

						<!-- Maximum distance of the beam -->
						<max>70</max>

						<!-- Linear resolution of the beam -->
						<resolution>0.001</resolution>
					</range>

					<noise>
						<type> gaussian </type>
						<mean> 0.0 </mean>
						<stddev>0.005</stddev>
					</noise>
				</ray>

				<plugin name="gazebo_ros_laser_controller" filename="libgazebo_ros_velodyne_laser.so">
					<topicName>/gazebo_api/lidar</topicName>
					<frameName>lidar</frameName>
					<organize_cloud>false</organize_cloud>
					<min_range>0.12</min_range>
					<max_range>70</max_range>
					<gaussianNoise>0.005</gaussianNoise>
				</plugin>
			</sensor>
		</link>

		<joint type="fixed" name="lidar_revolute">
			<pose> 0 0 0 0 0 0</pose>
			<child> lidar </child>
			<parent> chassis </parent>
		</joint>
		
		<!-- now to list the wheels -->
		<link name="wheel_1_LF">
			<pose> 0.1397 0.12764 0.02604 0 0 0</pose>
			<inertial>
				<mass> 0.129 </mass>
				<inertia>
					<ixx>0.001 </ixx>
					<iyy>0.001 </iyy>
					<izz>0.001 </izz>
					<ixy>0    </ixy>
					<ixz>0    </ixz>
					<iyz>0    </iyz>
				</inertia>			
			</inertial>

			<!-- collision geometry is a cylinder -->
			<collision name="wheel_1_LF_collision">
				<pose> 0 0 0 1.57079 0 0 </pose>
				<geometry>
					<cylinder>
						<radius> 0.06 </radius>
						<length> 0.02 </length>
					</cylinder>
				</geometry>

				<surface>
					<friction>
					<ode>
						<mu>0.15</mu>
						<mu2>0.15</mu2>
						<slip1>0.1</slip1>
						<slip2>0.1</slip2>
					</ode>
					</friction>
				</surface>
			</collision>

			<visual name="wheel_1_LF_visual">
				<geometry>
					<mesh>
						<uri> model://dragoon/meshes/wheel.dae</uri>
					</mesh>
				</geometry>
			</visual>
		</link>

		<!-- wheel 1 revolute joint -->
		<joint type="revolute" name="wheel_1_LF_revolute">
			<pose> 0 0 0 0 0 0</pose>
			<child> wheel_1_LF </child>
			<parent> chassis </parent>
			<axis>
				<xyz> 0 1 0 </xyz>
				<dynamics>
					<damping>0.1</damping>
					<friction>0.99</friction>
				</dynamics>		
			</axis>
		</joint>

		<link name="wheel_2_RF">
			<pose> 0.1397 -0.12764 0.02604 0 0 0</pose>
			<inertial>
				<mass> 0.129 </mass>
				<inertia>
					<ixx>0.001 </ixx>
					<iyy>0.001 </iyy>
