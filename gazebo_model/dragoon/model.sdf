					</cylinder>
				</geometry>

				<surface>
					<friction>
					<ode>
						<mu>0.15</mu>
						<mu2>0.15</mu2>
						<slip1>0.1</slip1>
						<slip2>0.1</slip2>
					</ode>
					</friction>
				</surface>
			</collision>
			<visual name="wheel_3_LB_visual">
				<geometry>
					<mesh>
						<uri> model://dragoon/meshes/wheel.dae</uri>
					</mesh>
				</geometry>
			</visual>
		</link>

