<?xml version='1.0'?>
<sdf version='1.4'>
	<model name="dragoon">

	<!-- Main chassis of dragoon -->
		<link name='chassis'>
			<pose>0 0 0 0 0 0</pose>
			
			<inertial>
				<mass>3.59"</mass>
				<inertia>
					<ixx>0.05 </ixx>
					<iyy>0.04 </iyy>
					<izz>0.08 </izz>
					<ixy>0    </ixy>
					<ixz>0    </ixz>
					<iyz>0    </iyz>
				</inertia>
			</inertial>

			<!-- collision is a block -->
			<collision name='collision'>
				<pose> -0.01 0 0.12 0 0 0</pose>
				<geometry>
					<box>
						<size> 0.4 0.2 0.24 </size>
					</box>
				</geometry>
			</collision>

			<visual name='visual'>
				<geometry>
					<mesh>	
						<uri> model://dragoon/meshes/dragoon_base.STL</uri>
					</mesh>
				</geometry>
			</visual>
		</link>
		
		<!-- now to list the wheels -->
		<link name="wheel_1_LF">
			<pose> 0.1397 0.12764 0.02604 0 0 0</pose>
			<inertial>
				<mass> 0.129 </mass>
				<inertia>
					<ixx>0.001 </ixx>
					<iyy>0.001 </iyy>
					<izz>0.001 </izz>
					<ixy>0    </ixy>
					<ixz>0    </ixz>
					<iyz>0    </iyz>
				</inertia>			
			</inertial>

			<!-- collision geometry is a cylinder -->
			<collision name="wheel_1_LF_collision">
				<pose> 0 0 0 1.57079 0 0 </pose>
				<geometry>
					<cylinder>
						<radius> 0.06 </radius>
						<length> 0.02 </length>
					</cylinder>
				</geometry>

				<surface>
					<friction>
					<ode>
						<mu>0.15</mu>
						<mu2>0.15</mu2>
						<slip1>0.1</slip1>
						<slip2>0.1</slip2>
					</ode>
					</friction>
				</surface>
			</collision>

			<visual name="wheel_1_LF_visual">
				<geometry>
					<mesh>
						<uri> model://dragoon/meshes/wheel.dae</uri>
					</mesh>
				</geometry>
			</visual>
		</link>

		<!-- wheel 1 revolute joint -->
		<joint type="revolute" name="wheel_1_LF_revolute">
			<pose> 0 0 0 0 0 0</pose>
			<child> wheel_1_LF </child>
			<parent> chassis </parent>
			<axis>
				<xyz> 0 1 0 </xyz>
				<dynamics>
					<damping>0.1</damping>
					<friction>0.99</friction>
				</dynamics>		
			</axis>
		</joint>

