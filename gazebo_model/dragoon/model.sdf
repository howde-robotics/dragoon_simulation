			</collision>

			<visual name="wheel_4_RB_visual">
				<geometry>
					<mesh>
						<uri> model://dragoon/meshes/wheel.dae</uri>
					</mesh>
				</geometry>
			</visual>
		</link>

		<joint type="revolute" name="wheel_4_RB_revolute">
			<pose> 0 0 0 0 0 0</pose>
			<child> wheel_4_RB </child>
			<parent> chassis </parent>
			<axis>
