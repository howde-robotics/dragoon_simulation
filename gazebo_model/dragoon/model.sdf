					<ixy>0    </ixy>
					<ixz>0    </ixz>
					<iyz>0    </iyz>
				</inertia>			
			</inertial>

			<collision name="wheel_2_RF_collision">
				<pose> 0 0 0 1.57079 0 0 </pose>

				<geometry>
					<cylinder>
						<radius> 0.06 </radius>
						<length> 0.02 </length>
					</cylinder>
				</geometry>

				<surface>
					<friction>
					<ode>
						<mu>0.15</mu>
						<mu2>0.15</mu2>
						<slip1>0.1</slip1>
						<slip2>0.1</slip2>
					</ode>
					</friction>
				</surface>
			</collision>
			<visual name="wheel_2_RF_visual">
				<geometry>
					<mesh>
						<uri> model://dragoon/meshes/wheel.dae</uri>
					</mesh>
				</geometry>
			</visual>
		</link>

		<joint type="revolute" name="wheel_2_RF_revolute">
			<pose> 0 0 0 0 0 0</pose>
			<child> wheel_2_RF </child>
			<parent> chassis </parent>
			<axis>
				<xyz> 0 1 0 </xyz>
				<dynamics>
					<damping>0.1</damping>
					<friction>0.99</friction>
				</dynamics>		
			</axis>
		</joint>

		<link name="wheel_3_LB">
			<pose> -0.1397 0.12764 0.02604 0 0 0</pose>
			<inertial>
				<mass> 0.129 </mass>
				<inertia>
					<ixx>0.001 </ixx>
					<iyy>0.001 </iyy>
					<izz>0.001 </izz>
					<ixy>0    </ixy>
					<ixz>0    </ixz>
					<iyz>0    </iyz>
				</inertia>			
			</inertial>

			<collision name="wheel_3_LB_collision">
				<pose> 0 0 0 1.57079 0 0 </pose>

				<geometry>
