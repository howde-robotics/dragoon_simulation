<?xml version="1.0"?>
<launch>

	<param name="robot_description" command="$(find xacro)/xacro '$(find dragoon_simulation)/urdf/dragoon.xacro'"/>

	<!-- send joint values -->
	<node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui">
		<param name="use_gui" value="True"/>
	</node>

	<!-- Combine joint values -->
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

	<!-- Show in Rviz   -->
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find dragoon_simulation)/launch/dragoon.rviz"/>

</launch>